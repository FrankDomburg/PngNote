<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.karino2.pngnote">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.PngNote">
        <activity
            android:name="com.domburg.newnote.BookListActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PngNote.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.domburg.newnote.BookActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PngNote.NoActionBar"></activity>
        <activity
            android:name="com.domburg.newnote.PageGridActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.PngNote.NoActionBar" />
    </application>

</manifest>